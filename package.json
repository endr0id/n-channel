{
  "name": "n-channel",
  "private": true,
  "scripts": {
    "format:check": "biome check --files-ignore-unknown=true",
    "format:write": "pnpm exec biome format --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json}": [
      "biome check --staged --files-ignore-unknown=true",
      "biome check --staged --write --unsafe --no-errors-on-unmatched"
    ]
  }
}
